{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "noImplicitAny": true,                            
    "strictNullChecks": true,                         
    "skipLibCheck": true
  },                           
  "include": ["**/*.ts", "**/*.tsx", "pharmacy.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
